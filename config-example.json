{
  "version": 1,
  "databases": {
    "reader_env": "READER_DATABASE"
  },
  "feeds": {
    "reddit_news": {
      "enabled": true,
      "type": "rss",
      "config": {
        "url": "https://www.reddit.com/r/news.rss"
      }
    }
  },
  "notifiers": {
    "pushover_high_priority": {
      "enabled": true,
      "type": "pushover",
      "config": {
        "user_env": "PUSHOVER_USER",
        "token_env": "PUSHOVER_TOKEN",
        "priority": 1
      }
    }
  },
  "matchers": {
    "war": {
      "type": "substring",
      "config": {
        "case_sensitive": false,
        "match_groups": [
          [
            "war"
          ],
          [
            "declare"
          ],
          [
            "united",
            "states"
          ]
        ]
      }
    }
  },
  "searches": {
    "interesting_news": {
      "enabled": true,
      "check_title": true,
      "check_message": true,
      "feeds": [
        "reddit_news"
      ],
      "matchers": [
        "war"
      ],
      "notifiers": [
        "pushover_high_priority"
      ]
    }
  }
}
